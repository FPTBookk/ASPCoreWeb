@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "~/Views/Shared/testLO.cshtml";
}

<div class="container mt-4">
    <h2>Roles</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Role</a>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
