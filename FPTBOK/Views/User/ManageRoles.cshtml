@model FPTBOK.Models.UserRoleViewModel
@{
    Layout = "~/Views/Shared/testLO.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Manage Roles for @Model.User.UserName</h2>
        </div>
        <div class="card-body">
            <form asp-action="SetRoles" method="post">
                <input asp-for="User.Id" name="id" hidden />
                <div class="form-group">
                    <h3 for="roleNames">Roles</h3>
                    <select asp-for="Roles" asp-items="new SelectList(Model.Roles)" multiple class="form-control">
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
