@model IEnumerable<FPTBOK.Models.Cart>

@{
     Layout = "~/Views/Shared/homepage.cshtml";
}
<body class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Cart Items</h1>
        </div>
        
    </div>
    <table class="table mt-4">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserId)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.IdProNavigation)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdProNavigation.Name)</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            <div class="col-md-6 text-right">
            <a asp-controller="Order" asp-action="Create" class="btn btn-primary">Create Order</a>
        </div>
        </tbody>
    </table>
</body>
</html>
