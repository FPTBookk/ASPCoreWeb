@model IEnumerable<FPTBOK.Models.Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .img-box {
            max-width: 100px;
            max-height: 100px;
            overflow: hidden;
            position: relative;
            text-align: center;
        }
        .img-box img {
            max-width: 100%;
            max-height: 100%;
            display: inline;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Product List</h1>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
        <table class="table mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            <div class="img-box">
                                <img src="~/uploads/@Html.DisplayFor(modelItem => item.Image)" alt="@item.Name">
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.IdCatNavigation.Name)</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
