@model FPTBOK.Models.Product
@{
        Layout = "~/Views/Shared/homepage.cshtml";
}

    
    <style>
        .img-box {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100px;
        }

        .img-box img {
            max-width: 150%;
            max-height: 150%;
        }
    </style>

<body class="container">

    <div>
        <h1>Product Details</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                <div class="img-box">
                    <img src="~/uploads/@Html.DisplayFor(model => model.Image)" alt="">
                </div>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdCat)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.cat.Name
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-controller="Cart" asp-action="Create" asp-route-id="@Model?.Id" class="btn btn-success">Add To Cart</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>
