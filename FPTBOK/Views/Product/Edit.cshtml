@model FPTBOK.Models.Product

@{
    @* Layout = null; *@
}

<body>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <td>
                <img src="~/uploads/@Html.DisplayFor(modelItem => Model.Image)" width="100" height="100" alt="">
            </td>
              <div class="form-group">
                <label asp-for="ImageFile"> Choose a img</label>
                <input type="File" name="ImageFile"class="form-control" />
                <span asp-validation-for="Image" name="ImageFile" class="form-control-file"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCat" class="control-label"></label>
                <select asp-for="IdCat" class ="form-control" asp-items="ViewBag.IdCat"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>